<%- include("partials/header") %>

<main>
  <div class="blog-wrapper">
    <h2>Blogs</h2>
    <div class="blogs">
      <% if (locals.blogs.length !== 0) { %> <% blogs.forEach(blog => { %>
      <h3><%= blog.title %></h3>
      <p><%= blog.body %></p>
      <br /><br />
      <% }); %> <% } else { %> no blog <% } %>
    </div>
  </div>
</main>

